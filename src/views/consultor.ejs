<%- include('partials/_header'); -%>

<div class="container">
    <br />
    <!--Modal window trigger button -->
    <button type="button" class="btn btn-success margin-left-3 rounded" data-toggle="modal" data-target="#agregar" >
        Agregar Consultor
    </button>
    <br /><br />
    
    <!--Insert Modal window-->
    <div class="modal fade" role="dialog"  id="agregar">
      <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Agregar Consultor</h5>
            
          </div>
    
          <div class="modal-body">
          
            <form action="/consultor/add" method="post">
                <div class="form-group">
                  <label type="text">Nombre Completo/Razón Social</label>
                  <input type="text" name="full_name" placeholder="Ingresa aquí el nombre completo o Razón Social del consultor" class="form-control rounded" autofocus>
                </div>
                
                <div class="form-group">
                  <label type="text">Teléfono</label>
                  <input type="text" name="phone" placeholder="Ingresa aquí el teléfono del consultor" class="form-control rounded" minlength="10" maxlength="10">
                </div>

                 <div class="form-group">
                      <label type="text">Correo Electrónico</label>
                      <input type="email" name="email" placeholder="Ingresa el correo electrónico del consultor" class="form-control rounded">
                        
                 </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-info rounded">Guardar</button>
            <button type="button" class="btn btn-danger rounded" data-dismiss="modal">Cancelar</button>
          </div>
        </form>
    
        </div>
      </div>
    </div>
    </div>
    <!--End of insert modal window-->
    
    <!--Body Table-->
    
      <div class="table-responsive">
          <table id="table" class="table table-sm table-active table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Nombre Completo/Razón Social</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <td>Acciones</td>
              </tr>
            </thead>
            <tbody>
              <% if (data) { %>
                <% for(var i = 0; i < data.length; i++) { %>
                  <tr>
                    <td><%= (i + 1) %></td>
                    <td><%= data[i].full_name %></td>
                    <td><%= data[i].phone %></td>
                    <td><%= data[i].email %></td>
                    
                    
                    <td>
                      <br>
