          <script>
            $('#datepicker').datepicker({
                uiLibrary: 'bootstrap4',
                viewMode: "years",
                format: 'yyyy',
                minViewMode: "years",
                width: 430
            });
          </script> 
          </div>
        </div>
      </div>

      <div class="form-group">
