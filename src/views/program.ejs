<%- include('partials/_header'); -%>

<div class="container">
<br />
<!--Modal window trigger button -->
<button type="button" class="btn btn-success margin-left-3" data-toggle="modal" data-target="#agregar" >Agregar programa</button>
<br /><br />

<!--Insert Modal window-->
<div class="modal fade" role="dialog"  id="agregar">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agregar Programa</h5>
        
      </div>
      <div class="modal-body">
        <div class="card-body">

          <form action="/add" method="post">
            <div class="form-group">
              <input type="text" name="program_code" placeholder="Clave" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="program_name" placeholder="Programa" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="coordination" placeholder="Coordinación" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="id_finantial_ally" placeholder="Aliado" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="in_account" placeholder="Cuenta de ingresos" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="out_account" placeholder="Cuenta de egresos" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="status" placeholder="Estatus" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="end_date" placeholder="Fecha de término" class="form-control">
            </div>
            
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
<!--End of insert modal window-->
<div class="container">
  <div class="row">
    <div class="col-md-7"></div>
      <table class="table table-active table-hover">
        <thead>
          <tr>
            <td>#</td>
            <td>Clave</td>
            <td>Programa</td>
            <td>Coordinación</td>
            <td>Aliado</td>
            <td>Cuenta de ingresos</td>
            <td>Cuenta de egresos</td>
            <td>Estatus</td>
            <td>Fecha de término</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].program_code %></td>
                <td><%= data[i].program_name %></td>
                <td><%= data[i].coordination %></td>
                <td><%= data[i].id_finantial_ally %></td>
                <td><%= data[i].in_account %></td>
                <td><%= data[i].out_account %></td>
                <td><%= data[i].status %></td>
                <td><%= data[i].end_date %></td>
                
                <td>
                  <a href="/update/<%= data[i].id_program %>" class="btn-sm btn-info">Editar</a>
                </td>
                <td>  
                  <a href="/delete/<%= data[i].id_program %>" class="btn-sm btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>

<%- include('partials/_footer'); -%>
