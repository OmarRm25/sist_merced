<%- include('partials/_header'); -%>

<div class="container">
<br />
<!--Modal window trigger button -->
<button type="button" class="btn btn-success margin-left-3 rounded" data-toggle="modal" data-target="#agregar" >Agregar programa</button>
<br /><br />

<!--Insert Modal window-->
<div class="modal fade" role="dialog"  id="agregar">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agregar Programa</h5>
        
      </div>

      <div class="modal-body">
      
        <form action="/add" method="post">
            <div class="form-group">
              <label type="text">Clave</label>
              <input type="text" name="program_code" placeholder="Ingresa aquí la clave de programa" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <label type="text">Programa</label>
              <input type="text" name="program_name" placeholder="Ingresa aquí el nombre del Programa" class="form-control">
            </div>
            <div class="form-group">
              <label type="text">Coordinación</label>
              <select name="coordination" placeholder="Coordinación" class="form-control">
                <option>Formación y Fortalecimiento</option>
                <option>Inversión Social</option>
                </select>
            </div>
            <div class="form-group">
              <label type="text">Aliado Financiero</label>
              <select type="text" name="id_finantial_ally" placeholder="Aliado" class="form-control">
                <% console.log(data); %>
                <% if (data.allies) { %>
                <% for(var i=0; i < data.allies.length; i++){ %>
                  <option value="<%= data.allies[i].id_finantial_ally %>"> <%= data.allies[i].fa_name %></option>
                 <% } %>
                 <% } %>
              </select>
            </div>
            <div class="form-group">
              <label type="text">Cuenta de ingresos</label>
              <input type="text" name="in_account" placeholder="Ingresa aquí la Cuenta de ingresos" class="form-control">
            </div>
            <div class="form-group">
              <label type="text">Cuenta de egresos</label>
              <input type="text" name="out_account" placeholder="Ingresa aquí la Cuenta de egresos" class="form-control">
            </div>
            <div class="form-group">
              <label type="text">Estatus</label>
              <select name="status" value="Elige el estatus del programa" class="form-control">
                <option>Activo</option>
                <option>Finalizado</option>
                <option>Cancelado</option>
              </select>  
            </div>
            <div class="form-group">
              <label type="text">Fecha de término</label>
              <input name="end_date" id="datepicker" width="415" value="N/A"/>
            <script>
              $('#datepicker').datepicker({
                  uiLibrary: 'bootstrap4',
                  format: 'dd/mm/yyyy'

              });
            </script>
            </div>
            
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-info rounded">Guardar</button>
        <button type="button" class="btn btn-danger rounded" data-dismiss="modal">Cancelar</button>
      </div>
    </form>

    </div>
  </div>
</div>
<!--End of insert modal window-->

<!--Body Table-->
