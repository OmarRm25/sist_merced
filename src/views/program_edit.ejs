<%- include('partials/_header'); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <h5>Editar programa</h5>

        <form action="/program/update/<%= data.id_program %>" method="POST">
          <div class="form-group">
            <label type="text">Clave</label>
            <input type="text" name="program_code" value="<%= data.program_code %>" placeholder="Ingresa aquí la clave de programa" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <label type="text">Programa</label>
            <input type="text" name="program_name" value="<%= data.program_name %>" placeholder="Ingresa aquí el nombre del Programa" class="form-control">
          </div>
          <div class="form-group">
            <label type="text">Coordinación</label>
            <select name="coordination" value="<%= data.coordination %>" placeholder="Coordinación" class="form-control">
              <option>Formación y Fortalecimiento</option>
              <option>Inversión Social</option>
              </select>            </div>
              <div class="form-group">
                <label type="text">Aliado Financiero</label>
                <input type="text" name="id_organization" value="<%= data.id_organization %>" placeholder="Aliado Financiero" class="form-control" disabled>
              </div>
          <div class="form-group">
            <label type="text">Cuenta de ingresos</label>
            <input type="text" name="in_account" value="<%= data.in_account %>" placeholder="Cuenta de ingresos" class="form-control">
          </div>
          <div class="form-group">
            <label type="text">Cuenta de egresos</label>
            <input type="text" name="out_account" value="<%= data.out_account %>" placeholder="Cuenta de egresos" class="form-control">
          </div>
          <div class="form-group">
            <label type="text">Estatus</label>
              <select name="status" value="<%= data.status %>" placeholder="Estatus" class="form-control">
                <option>Activo</option>
                <option>Finalizado</option>
                <option>Cancelado</option>
              </select>
          </div>
          <div class="form-group">
            <label type="text">Fecha de término</label>
            <input name="end_date" id="datepicker" width="415" value="<%= data.end_date %>"/>
          <script>
            $('#datepicker').datepicker({
                uiLibrary: 'bootstrap4',
                format: 'dd/mm/yyyy'

            });
          </script>
          </div>
          

          <button type="submit" class="btn btn-info rounded">
            Actualizar
          </button>
            
          <a href="/program" class="btn btn-danger rounded">
            Cancelar
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer'); -%>
